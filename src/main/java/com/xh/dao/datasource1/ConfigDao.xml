<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xh.dao.datasource1.ConfigDao">
	
	<!-- ############################## -->
	<!-- ######        增加                      ###### -->
	<!-- ############################## -->
	
	<insert id="addConfig" parameterType="com.xh.entry.Config">
		insert into
		config(`key`,`value`,createTime)
		value(#{key},#{value},#{createTime})
	</insert>
	
	<!-- ############################## -->
	<!-- ######       删除                         ###### -->
	<!-- ############################## -->
		
	<delete id="deleteConfig" parameterType="com.xh.entry.Config">
		delete from config where `key`=#{key}
	</delete>
	
	<!-- ############################## -->
	<!-- ######       修改                         ###### -->
	<!-- ############################## -->
	
	<update id="updateConfig" parameterType="com.xh.entry.Config">
		update config set value=#{value}
		where `key`=#{key}
	</update>
	
	<!-- ############################## -->
	<!-- ######       查询                         ###### -->
	<!-- ############################## -->
		
	<select id="getConfigByKey" resultType="com.xh.entry.Config">
		select * from config where `key`=#{key}
	</select>
</mapper>  
